<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#1565C0"/> <!-- Blue border on press -->
            <solid android:color="#E3F2FD"/> <!-- Light blue background when pressed -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#1976D2"/> <!-- Default Blue border -->
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
